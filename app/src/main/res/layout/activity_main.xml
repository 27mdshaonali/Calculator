<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity"
    >



    <ImageView
        android:id="@+id/image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/crescent_moon_50"
        />


    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/image"
        android:elevation="100dp"
        android:gravity="center"
        android:background="@drawable/strok"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        >

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000 0000 0000 0000"
            android:textSize="30sp"
            />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:weightSum="4"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="C"
                android:textColor="#b9954a"
                android:textSize="26sp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="Del"
                android:textAllCaps="false"
                android:textColor="#b9954a"
                android:textSize="26sp"
                />

            <Button
                android:id="@+id/modulus"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="%"
                android:textColor="#b9954a"
                android:textSize="26sp"
                />

            <Button
                android:id="@+id/devide"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="รท"
                android:textColor="#b9954a"
                android:textSize="26sp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:weightSum="4"

            >

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="7"
                android:textSize="26sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="8"
                android:textSize="26sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="9"
                android:textSize="26sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/multiplication"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="x"
                android:textColor="#b9954a"
                android:textSize="26sp"
                android:textStyle="normal"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:weightSum="4"

            >

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="4"
                android:textSize="26sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="5"
                android:textSize="26sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="6"
                android:textSize="26sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="+"
                android:textColor="#b9954a"
                android:textSize="26sp"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:weightSum="4"

            >

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="1"
                android:textSize="26sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="2"
                android:textSize="26sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_2"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="3"
                android:textSize="26sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_color_yellow"
                android:elevation="10dp"
                android:padding="0dp"
                android:text="_"
                android:textColor="#b9954a"
                android:textSize="26sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:weightSum="2"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_2"
                    android:elevation="10dp"
                    android:padding="0dp"
                    android:text="0"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_2"
                    android:elevation="10dp"
                    android:padding="0dp"
                    android:text="."
                    android:textSize="26sp"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/equals"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/equals_color"
                    android:elevation="10dp"
                    android:padding="0dp"
                    android:text="="
                    android:textColor="#b9954a"
                    android:textSize="26sp"

                    />


            </LinearLayout>

        </LinearLayout>






    </LinearLayout>
</RelativeLayout>